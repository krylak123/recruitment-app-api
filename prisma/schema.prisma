generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        String   @id @default(uuid())
  role      Role     @default(USER)
  email     String   @unique
  hash      String
  firstName String
  lastName  String
  createAt  DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@map("users")
}

